name 'pam'
org 'amylum'

licenses 'COPYING'

deps(
  libtirpc: {
    version: '1.1.4-5',
    checksum: '8eacbc4ce174452a1f6e4f05823f631a22e7035409cc056057653797d88531a3'
  },
  krb5: {
    version: '1.16.2-1',
    checksum: '12ad301f220ddc825bf126c5da77ff1c891a02764addea7ed00b1b0cfcb255c3'
  },
  openssl: {
    version: '1.1.0i-3',
    checksum: '12cf164859e31f433bfe8ae1533e700cd98dc90f0138e7af202d77db9ad83996'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc',
  libdir: '/usr/lib',
  'enable-regenerate-docu': nil
)

cflags
cflags ['-L/usr/lib/musl/lib']
harden

patch 'fix-compat.patch'
patch 'musl-fix-pam_exec.patch'
patch 'pam_rhosts_fix.patch'

build do
  run './autogen.sh'
  configure
  make
  install
end

test do
  # TODO: add tests
end
