name 'pam'
org 'amylum'

licenses 'COPYING'

deps(
  libtirpc: {
    version: '1.0.3-4',
    checksum: 'dddb4c67a87740163ca2864ccca95991f6a956998427d014ecb05474e4fd46fc'
  },
  krb5: {
    version: '1.16.1-1',
    checksum: '4538754807eedb74cdde85e804142226ba577e346dd48768e1a824720eb3a412'
  },
  openssl: {
    version: '1.1.0h-2',
    checksum: 'c56e167c5836f9445472b723b5f7b15f3eff19e0d312b4046852605b0706b7c7'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc',
  libdir: '/usr/lib',
  'enable-regenerate-docu': nil
)

cflags
cflags ['-L/usr/lib/musl/lib']
harden

patch 'fix-compat.patch'
patch 'musl-fix-pam_exec.patch'
patch 'pam_rhosts_fix.patch'

build do
  run './autogen.sh'
  configure
  make
  install
end

test do
  # TODO: add tests
end
