name 'pam'
org 'amylum'

licenses 'COPYING'

deps(
  libtirpc: {
    version: '1.0.2-7',
    checksum: '63c910e1e18e0e80e56b36d9c43c44a19b1c9a9890a7c9731b07ba318b58e264'
  },
  krb5: {
    version: '1.16-1',
    checksum: '1fd4902c10e07c246698986886ffe7ad287edde9eea45f336fbd4653dd873a28'
  },
  openssl: {
    version: '1.1.0g-1',
    checksum: 'f70d94ca94f05be4a14438cf29ed4695d9731d023a4b72d30126d826720bc48b'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc',
  libdir: '/usr/lib',
  'enable-regenerate-docu': nil
)

cflags
cflags ['-L/usr/lib/musl/lib']
harden

patch 'fix-compat.patch'
patch 'musl-fix-pam_exec.patch'
patch 'pam_rhosts_fix.patch'

build do
  run './autogen.sh'
  configure
  make
  install
end

test do
  # TODO: add tests
end
