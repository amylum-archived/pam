name 'pam'
org 'amylum'

licenses 'COPYING'

deps(
  libtirpc: {
    version: '1.0.2-3',
    checksum: '71e90c13d373198086c3fd5c92c83ccc8f5f28fd3c240ce6be81739cffea849e'
  },
  krb5: {
    version: '1.15.2-1',
    checksum: 'e26511eec7695d1a4ec64240e42aab8643e7d5a7bf530ca15cc91888c322b141'
  },
  openssl: {
    version: '1.0.2l-1',
    checksum: '6a46a1a65aa5cadc69a2b01e3ef8fa0a38353f3f7b86c1a772ab5156dd5b2264'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc',
  libdir: '/usr/lib',
  'enable-regenerate-docu': nil
)

cflags
cflags ['-L/usr/lib/musl/lib']
harden

patch 'fix-compat.patch'
patch 'musl-fix-pam_exec.patch'
patch 'pam_rhosts_fix.patch'

build do
  run './autogen.sh'
  configure
  make
  install
end

test do
  # TODO: add tests
end
